{
  "name": "developer.box.com",
  "description": "Box Developer Documentation - Configuration",
  "version": "1.0.0",
  "main": "index.yml",
  "repository": {
    "type": "git",
    "url": "https://github.com/box/developer.box.com.git"
  },
  "keywords": [
    "box",
    "platform",
    "api",
    "documentation"
  ],
  "author": "Box <oss@box.com>",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "posttest": "concurrently 'yarn:posttest:*'",
    "posttest:markdown": "yarn lint:markdown",
    "posttest:yaml": "yarn lint:yaml",
    "posttest:spelling": "yarn lint:spelling",
    "test": "jest ./tests",
    "lint:markdown": "markdownlint -c markdownlintrc.json ./src",
    "lint:spelling": "yarn lint:spelling:interactive -r",
    "lint:spelling:interactive": "mdspell 'src/guides/**/*.md' -n --en-us -d dictionaries/en_US",
    "lint:yaml": "yamllint ./src",
    "watch": "concurrently 'yarn:watch:microcopy' 'yarn:watch:guides'",
    "watch:microcopy": "watch 'yarn build:microcopy' src/microcopy compiler --interval=0.2",
    "watch:guides": "watch 'yarn build:guides' src/guides --interval=0.2",
    "watch:test": "watch 'yarn test' src --interval=1",
    "clean": "rm -rf compiled && mkdir compiled",
    "prebuild": "yarn clean",
    "build": "concurrently 'yarn:build:*'",
    "build:microcopy": "node -e 'require(\"./compiler\").write()'",
    "build:guides": "node -e 'require(\"./compiler/guides\").write()'",
    "serve": "http-server -p 8081 ./compiled",
    "start": "concurrently 'yarn watch' 'yarn watch:test' 'yarn serve'"
  },
  "dependencies": {
    "@stoplight/json-ref-resolver": "^2.1.1",
    "comment-json": "^2.0.0",
    "concurrently": "^4.1.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.4",
    "http-server": "^0.11.1",
    "jest": "^24.8.0",
    "js-yaml": "^3.13.1",
    "jsonpath": "^1.0.2",
    "markdown-spellcheck": "^1.3.1",
    "markdownlint-cli": "^0.17.0",
    "opencc": "^1.0.5",
    "strip-indent": "^3.0.0",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "loctool": "^2.2.0",
    "ilib-loctool-ghfm": "^1.2.0"
  }
}
