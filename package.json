{
  "name": "developer.box.com",
  "description": "Box Developer Documentation - Configuration",
  "version": "1.0.0",
  "main": "index.yml",
  "repository": {
    "type": "git",
    "url": "https://github.com/box/developer.box.com.git"
  },
  "keywords": [
    "box",
    "platform",
    "api",
    "documentation"
  ],
  "author": "Box <oss@box.com>",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "pretest": "yamllint ./src",
    "test": "jest ./tests",
    "watch": "concurrently 'yarn:watch:microcopy' 'yarn:watch:guides'",
    "watch:microcopy": "watch 'yarn build:microcopy' src/microcopy compiler --interval=0.2",
    "watch:guides": "watch 'yarn build:guides' src/guides --interval=0.2",
    "watch:test": "watch 'yarn test' src --interval=1",
    "clean": "rm -rf compiled && mkdir compiled",
    "prebuild": "yarn clean",
    "build": "concurrently 'yarn:build:*'",
    "build:microcopy": "node -e 'require(\"./compiler\").write()'",
    "build:guides": "rsync -r --checksum src/guides/ compiled/guides/",
    "serve": "http-server -p 8081 ./compiled",
    "start": "concurrently 'yarn watch' 'yarn watch:test' 'yarn serve'"
  },
  "dependencies": {
    "@stoplight/json-ref-resolver": "2.0.3",
    "comment-json": "^2.0.0",
    "concurrently": "^4.1.0",
    "fs-extra": "^8.1.0",
    "http-server": "^0.11.1",
    "jest": "^24.8.0",
    "js-yaml": "^3.13.1",
    "jsonpath": "^1.0.2",
    "watch": "^1.0.2"
  }
}
